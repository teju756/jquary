<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
	$('#down1').click(function(){
		$('#p1').toggle();
	})
    $('#down2').click(function(){
		$('#p2').toggle();
	})
	$('#down3').click(function(){
		$('#p3').toggle();
	})
	$('#downn1').click(function(){
		$('#pp1').show();
	})
    $('#downn2').click(function(){
		$('#pp2').show();
	})
	$('#downn3').click(function(){
		$('#pp3').show();
	})
	$('#downnn1').click(function(){
		$('#ppp1').hide();
	})
    $('#downnn2').click(function(){
		$('#ppp2').hide();
	})
	$('#downnn3').click(function(){
		$('#ppp3').hide();
	})
	</script>
</script>
